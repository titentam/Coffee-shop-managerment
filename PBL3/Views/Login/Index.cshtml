@model PBL3.Models.TaiKhoan
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/login.css">
    <script src="https://kit.fontawesome.com/61e1e4c667.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">
    <link rel="stylesheet"
          href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
	
    <title>Đăng nhập</title>
</head>
<body>
    <div class="container">
        <div class="form-container">
            <form asp-action="index">
                <h1>Đăng Nhập</h1>
                
                <div class="form-group">
                    
                    <label asp-for="TaiKhoan1"><b>Username</b></label>
                    <input asp-for="TaiKhoan1" type="text" placeholder="Enter Username" >
                </div>
                <div class="form-group">
                    <label asp-for="MatKhau" for="password"><b>Password</b></label>
                    <input asp-for="MatKhau" type="password" placeholder="Enter Password" >
                    <label style="color:red">@ViewBag.error</label>
                </div>
                <div class="form-group">
                        <button class="btn btn-primary">Sign In</button>  
                </div>
            </form>
        </div>
        <div class="anh-MinhHoa">
            <img src="~/adminassets/images/logo/backgroundCoffee.jpg" alt="">
        </div>
    </div>

</body>
</html>