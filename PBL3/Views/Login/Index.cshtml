@model PBL3.AccountModel.Account


@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Login Page</title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/Assets/images/logo/favicon.png">

    <!-- page css -->
    <!-- Core css -->
    <link href="~/Assets/css/app.min.css" rel="stylesheet">

</head>

<body>
    <div class="app">
        <div class="container-fluid">
            <div class="d-flex full-height p-v-15 flex-column justify-content-between">
                <div class="d-none d-md-flex p-h-40">
                    <img src="~/Assets/images/logo/logo.png" alt="">
                </div>
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-md-5">
                            <div class="card">
                                <div class="card-body">
                                    <h2 class="m-t-20">Sign In</h2>
                                    @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                                    {

                                        if (ViewBag.LoginStatus != null)
                                        {
                                            if (ViewBag.LoginStatus == 0)
                                            {
                                                <div class="alert alert-danger">Invalid Information!</div>
                                            }
                                        }
                                        <div class="form-group">
                                            <label class="font-weight-semibold" for="userName">Username</label>
                                            <div class="input-affix">
                                                <i class="prefix-icon anticon anticon-user"></i>
                                                @Html.TextBoxFor(m => m.UserName, new {@class = "form-control", @placeholder = "username"})
                                            </div>

                                        </div>
                                        <div class="form-group">
                                            <label class="font-weight-semibold" for="password">Password</label>

                                            <div class="input-affix m-b-10">
                                                <i class="prefix-icon anticon anticon-lock"></i>
                                                @Html.PasswordFor(m => m.Password, new {@class = "form-control", @placeholder = "password"})
                                            </div>

                                        </div>
                                        <div class="form-group">
                                            <div class="d-flex align-items-center justify-content-between">
                                                <a class="float-right font-size-13 text-muted" href="">Forget Password?</a>
                                                <button class="btn btn-primary">Sign In</button>
                                            </div>
                                        </div>
                                    }

                                </div>
                            </div>
                        </div>
                        <div class="offset-md-1 col-md-6 d-none d-md-block">
                            <img class="img-fluid" href="~/Assets/images/others/login.png" alt="">
                        </div>
                    </div>
                </div>
                <div class="d-none d-md-flex  p-h-40 justify-content-between">
                    <span class="">Project Based Learning 2023</span>
                    <ul class="list-inline">
                        <li class="list-inline-item">
                            <a class="text-dark text-link" href="">Legal</a>
                        </li>
                        <li class="list-inline-item">
                            <a class="text-dark text-link" href="">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>


    <!-- Core Vendors JS -->
    <script src="~/Assets/js/vendors.min.js"></script>

    <!-- page js -->
    <!-- Core JS -->
    <script src="~/Assets/js/app.min.js"></script>

</body>

</html>