@model PBL3.AccountModel.Account
@*Login page*@

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/Assets/css/loginStyle.css">
    <script src="https://kit.fontawesome.com/61e1e4c667.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">
    <link rel="stylesheet"
          href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">

    <title>Landing Page</title>
</head>
<body>
    <div class="container">
        <div class="form-container">
            @using (Html.BeginForm("Index", "Login", FormMethod.Post))
            {

                if (ViewBag.LoginStatus != null)
                {
                    if (ViewBag.LoginStatus == 0)
                    {
                        <div class="alert alert-danger">Thông tin không hợp lệ!</div>
                    }
                }

                <h1>Đăng Nhập</h1>
                <label for="username"><b>Username</b></label>

                @Html.TextBoxFor(m => m.UserName, new {@class = "form-control", @placeholder = "username"})
                <label for="password"><b>Password</b></label>
                @Html.PasswordFor(m => m.Password, new {@class = "form-control", @placeholder = "password"})

                <div style="display: flex; padding:  1rem; "><button type="submit">Đăng nhập</button></div>
            }
        </div>
        <div class="anh-MinhHoa">
            <img src="/Assets/bg.jpg" alt="">
        </div>
    </div>

</body>

</html>