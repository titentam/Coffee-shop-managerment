@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<PBL3.Models.CongThuc>
@{
	ViewData["Title"] = "Danh sách công thức";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="page-header">
	<div class="header-sub-title">
		<nav class="breadcrumb breadcrumb-dash">
			<a asp-area="Admin" asp-controller="Home" asp-action="index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
			<a class="breadcrumb-item" asp-area="Admin" asp-controller="CongThucs" asp-action="Index">Quản lí công thức</a>
			<span class="breadcrumb-item active">Danh sách công thức</span>
		</nav>
	</div>
</div>
<div class="card">
	<div class="card-body">
		<div class="row m-b-30">
			<div class="col-lg-8">
				<form method="get" asp-action="index" class="d-md-flex">
					<div class="input-affix m-b-10 m-r-15">
						<input type="text" class="form-control" placeholder="Tìm theo tên" value="@ViewBag.CurrentSearch" name="search">
					</div>
					<div class="m-b-10">
						<input type="submit" value="Tìm kiếm" class="btn btn-info btn-tone" />
					</div>
				</form>
			</div>
			<div class="col-lg-4 text-right">
				<a asp-area="Admin" asp-controller="CongThucs" asp-action="Create" class="btn btn-primary">
					<i class="anticon anticon-plus-circle m-r-5"></i>
					<span>Thêm công thức</span>
				</a>
			</div>
		</div>
		<div class="table-responsive">
			<table class="table table-hover e-commerce-table">
				<thead>
					<tr>
						<th>ID</th>
						<th>Tên công thức</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>
								<a asp-action="Details" asp-route-id="@item.CongThucId">#@item.CongThucId</a>
							</td>
							<td>@item.TenCongThuc </td>
							<td class="text-right">
								<a asp-action="Edit" asp-route-id="@item.CongThucId" class="btn btn-icon btn-hover btn-sm btn-rounded pull-right">
									<i class="anticon anticon-edit"></i>
								</a>
								<a asp-action="Delete" asp-route-id="@item.CongThucId" class="btn btn-icon btn-hover btn-sm btn-rounded">
									<i class="anticon anticon-delete"></i>
								</a>
							</td>
						</tr>
					}
				</tbody>
			</table>
			<div>
				<pager class="page-container" list="@Model" asp-area="Admin" asp-controller="CongThucs" asp-action="Index"></pager>
			</div>
		</div>
	</div>
</div>



