@model PBL3.Models.NhaCungCap

@{
    ViewData["Title"] = "Chi tiết nhà cung cấp";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
	<div class="header-sub-title">
		<nav class="breadcrumb breadcrumb-dash">
			<a asp-area="Admin" asp-controller="Home" asp-action="index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
			<a class="breadcrumb-item" asp-area="Admin" asp-controller="NhaCungCaps" asp-action="Index">Quản lí nguyên liệu</a>
			<span class="breadcrumb-item active">Chi tiết nhà cung cấp</span>
		</nav>
	</div>
</div>
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="product-info-table m-t-20">
                <tbody>
                    <tr>
                        <td>ID:</td>
                        <td class="text-dark font-weight-semibold">#@Model.NhaCungCapId</td>
                    </tr>
                    <tr>
                        <td>Tên nhà cung cấp:</td>
                        <td class="text-dark font-weight-semibold">@Model.TenNhaCungCap</td>
                    </tr>
                    <tr>
                        <td>Số điện thoại:</td>
                        <td class="text-dark font-weight-semibold">@Model.Sdt</td>
                    </tr>
                    <tr>
                        <td>Email:</td>
                        <td class="text-dark font-weight-semibold">@Model.Email</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}