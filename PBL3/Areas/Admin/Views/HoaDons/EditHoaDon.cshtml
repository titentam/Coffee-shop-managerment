@model Mon
@{
    ViewData["Title"] = "Chỉnh sửa hóa đơn";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var ctNl = ViewBag.ctNl;
}
<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="HoaDons" asp-action="Index">Quản lí hóa đơn</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="HoaDons" asp-action="details" asp-route-id="@ViewBag.hoaDonId">Chi tiết hóa đơn</a>
            <span class="breadcrumb-item active">Điều chỉnh số lượng món</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-header">
        <h4 class="card-title">Thông tin cơ bản</h4>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="product-info-table m-t-20">
                <tbody>
                    <tr>
                        <td>ID</td>
                        <td class="text-dark font-weight-semibold">@Model.MonId</td>
                    </tr>
                    <tr>
                        <td>Hình ảnh</td>
                        <td>
                            <div class="d-flex align-items-center">
                                <img class="img-fluid rounded" src="~/images/mons/@Model.HinhAnh" style="max-width: 60px" alt="@Model.TenMon">
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>Tên món</td>
                        <td class="text-dark font-weight-semibold">@Model.TenMon</td>
                    </tr>
                    <tr>
                        <td class="text-dark font-weight-semibold">
                            <form asp-action="EditHoaDon" asp-route-hoaDonId="@ViewBag.hoaDonId" asp-route-monId="@Model.MonId">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label class="control-label">Số lượng</label>
                                    <input type="number" name="soLuong" class="form-control" min="1" value="@ViewBag.soLuong" />
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Chỉnh sửa" class="btn btn-primary" />
                                </div>
                            </form>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

