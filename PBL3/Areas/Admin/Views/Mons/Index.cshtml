@using PagedList.Core.Mvc

@model PagedList.Core.IPagedList<PBL3.Models.Mon>
@{
	ViewData["Title"] = "Danh sách nhân viên";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="page-header">
	<div class="header-sub-title">
		<nav class="breadcrumb breadcrumb-dash">
			<a asp-area="Admin" asp-controller="Home" asp-action="index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
			<a class="breadcrumb-item" asp-area="Admin" asp-controller="Mons" asp-action="Index">Quản lí món</a>
			<span class="breadcrumb-item active">Danh sách món</span>
		</nav>
	</div>
</div>
<div class="card">
	<div class="card-body">
		<div class="row m-b-30">
			<div class="col-lg-8">
				<form method="get" asp-action="index" class="d-md-flex">
					<div class="m-b-10 m-r-15">
						<select asp-items="@ViewBag.DsLoaiMon" class="custom-select" style="min-width: 180px;" name="option">
							<option value="-1" disabled selected>Chọn loại món</option>
							<option value="0" selected>Tất cả</option>
						</select>
					</div>
					<div class="m-b-10 m-r-30">
						<button class="btn btn-info btn-tone m-r-5">Lọc</button>
					</div>
					<div class="input-affix m-b-10 m-r-15">
						<input type="text" class="form-control" placeholder="Tìm theo tên" value="@ViewBag.CurrentSearch" name="search">
					</div>
					<div class="m-b-10">
						<input type="submit" value="Tìm kiếm" class="btn btn-info btn-tone" />
					</div>
				</form>
			</div>
			<div class="col-lg-4 text-right">
				<a asp-area="Admin" asp-controller="Mons" asp-action="Create" class="btn btn-primary">
					<i class="anticon anticon-plus-circle m-r-5"></i>
					<span>Thêm món</span>
				</a>
			</div>
		</div>
		<div class="table-responsive">
			<table class="table table-hover e-commerce-table">
				<thead>
					<tr>
						<th>ID</th>
						<th>Hình ảnh</th>
						<th>Tên món</th>
						<th>Giá</th>
						<th>Loại món</th>
						<th>Công thức</th>
						<th>Hình ảnh</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>
								<a asp-action="Details" asp-route-id="@item.MonId">#@item.MonId</a>
							</td>
							<td>
								<div class="d-flex align-items-center">
									<img class="img-fluid rounded" src="~/images/mons/@item.HinhAnh" style="max-width: 60px" alt="@item.HinhAnh">
								</div>
							</td>
							<td>@item.TenMon</td>
							<td>@item.Gia</td>
							@if (item.LoaiMon != null)
							{
								<td>@item.LoaiMon.TenLoaiMon</td>
							}
							else
							{
								<td></td>
							}

							@if (item.CongThuc != null)
							{
								<td>@item.CongThuc.TenCongThuc</td>
							}
							else
							{
								<td></td>
							}
							<td class="text-right">
								<a asp-action="Edit" asp-route-id="@item.MonId" class="btn btn-icon btn-hover btn-sm btn-rounded pull-right">
									<i class="anticon anticon-edit"></i>
								</a>
								<a asp-action="Delete" asp-route-id="@item.MonId" class="btn btn-icon btn-hover btn-sm btn-rounded">
									<i class="anticon anticon-delete"></i>
								</a>
							</td>

						</tr>
					}
				</tbody>
			</table>
			<div>
				<pager class="page-container" list="@Model" asp-area="Admin" asp-controller="Mons" asp-action="Index"></pager>
			</div>
		</div>
	</div>
</div>