@model List<Tuple<NguyenLieu, int>>
   <p class="text-center">Công thức món đang làm</p>
   <table>
       <thead>
            <th>Tên nguyên liệu</th>
            <th>Số lượng cần</th>
            <th>Số lượng còn</th>
            <th>Đơn vị tính</th>
       </thead>
       <tbody>
        @if (Model != null)
        {
            @foreach (var i in Model)
            {
                <tr>
                    <td>@i.Item1.TenNguyenLieu</td>
                    <td>@i.Item2</td>
                    <td>@i.Item1.SoLuong</td>
                    <td>@i.Item1.DonViTinh</td>
                </tr>
            }

        }
       </tbody>
   </table>   
   

