@model List<Tuple<Mon, int>>
<p>Danh sách món</p>
<div >
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <div class=" d-flex justify-content-between m-1">
                <div class="d-flex justify-content-around">
                    <div class="text-center col-3"> </div>
                    <div class="text-center col-2">@item.Item2 </div>
                </div>
                <div class="d-flex justify-content-around">
                    <button class="btn btn-sm btn-danger">Hủy đơn</button>
                    <button class="btn btn-sm btn-success mx-2">Hoàn thành</button>
                    <button class="btn btn-sm btn-warning" onclick="ShowCongThuc(@item.Item1.MonId)">Xem công thức</button>

                </div>
            </div>
                
                
          
        }
    }
</div>
